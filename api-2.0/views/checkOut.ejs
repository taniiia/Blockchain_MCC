<!DOCTYPE html>
<html>
<head>
  <title>Patient Check-Out</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Patient Check-Out</h1>
  <form id="checkoutForm">
    <label>Patient:</label>
    <select name="patientID" required>
      <% patients.forEach(p => { %>
        <option value="<%= p.uuid %>"><%= p.name %> (<%= p.uuid %>)</option>
      <% }); %>
    </select><br/><br/>

    <label>Doctor:</label>
    <select name="doctorID" required>
      <% doctors.forEach(d => { %>
        <option value="<%= d.uuid %>"><%= d.name %> (<%= d.uuid %>)</option>
      <% }); %>
    </select><br/><br/>

    <label>Message:</label><br/>
    <textarea name="patientInfo" rows="3" placeholder="Type your message hereâ€¦" required></textarea><br/><br/>

    <label>Status:</label>
    <input type="text" name="status" required /><br/><br/>

    <!-- hidden peers array -->
    <input type="hidden" name="peers" value='<%= JSON.stringify(peers) %>' />

    <button type="submit">Check Out</button>
  </form>

  <div id="message" style="margin-top:1em;color:green;"></div>

  <script>
    document.getElementById('checkoutForm').addEventListener('submit', async e => {
      e.preventDefault();
      const f = e.target;
      const body = {
        patientID:   f.patientID.value,
        doctorID:    f.doctorID.value,
        patientInfo: f.patientInfo.value,  // now plain text
        status:      f.status.value,
        peers:       JSON.parse(f.peers.value)
      };
      const res = await fetch('/checkOut', {
        method: 'POST',
        credentials: 'include',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body)
      });
      const result = await res.json();
      if (res.ok && result.success) {
        document.getElementById('message').innerText = 'Checked-out and message sent to patient.';
      } else {
        document.getElementById('message').style.color = 'red';
        document.getElementById('message').innerText =
          'Error: ' + (result.message || JSON.stringify(result));
      }
    });
  </script>
</body>
</html>
